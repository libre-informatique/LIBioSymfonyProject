    {% if product.variety.commercial_descriptions|length > 0 %}
    <table>
        <thead>
            <tr>
                <th width="33%">
                    Caract√©ristique
                </th>
                <th>
                    Valeur
                </th>
            </tr>
        </thead>
        <tbody>
            {% for desc in product.variety.commercial_descriptions %}
                <tr>
                    <td width="33%">
                        {{ displayVarietyDescriptionLabel(desc) }}
                    </td>
                    <td>
                        {{ displayVarietyDescriptionValue(desc) }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
